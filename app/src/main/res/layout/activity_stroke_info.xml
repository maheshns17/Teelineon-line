<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.teelineon_line.activities.StrokeInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="20dp">
        <!--=====WRITE SPINNER AND EDITTEXT FOR THE FIELDS=====-->


        <TextView
            android:id="@+id/edt_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Teeline On-line Handwritten Data Collection Tool"
            android:textColor="#FFB6C1"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/edt_textViewwriter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Name of the writer" />

        <EditText
            android:id="@+id/edt_writer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/edt_textViewwriterid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Writer ID" />

        <EditText
            android:id="@+id/edt_writerid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Age Group" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/sp_age_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Gender" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/sp_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/edt_textViewhandspecification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Hand Specification" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/sp_hand_specification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/edt_textViewqualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Qualification " />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/sp_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/edt_textViewFamilarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Familarity of digital handheld devices " />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/sp_familarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/edt_textViewAlphabet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Teeline Alphabet " />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/sp_alphabet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/img_signature"
                android:layout_width="500px"
                android:layout_height="500px"
                android:layout_gravity="center"
                android:background="#ffffff" />

            <View
                android:layout_width="500px"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#cc0000" />
        </FrameLayout>


        <!-- <ImageView
             android:id="@+id/img_signature"
             android:layout_width="200px"
             android:layout_height="200px"
             android:layout_gravity="center"
             android:layout_marginTop="30dp"
             android:background="#FFFFFF" />-->

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/btn_Submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:text="Submit"
            custom:pb_colorComplete="@color/green_complete"
            custom:pb_colorNormal="@color/blue_normal"
            custom:pb_colorPressed="@color/blue_pressed"
            custom:pb_colorProgress="@color/purple_progress"
            custom:pb_textComplete="@string/Success"
            custom:pb_textProgress="@string/verifying" />


    </LinearLayout>
</ScrollView>
